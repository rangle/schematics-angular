{
  "$schema": "http://json-schema.org/schema",
  "id": "Service",
  "title": "Service Schema",
  "type": "object",
  "properties": {
    "path": {
      "description": "The path to create the feature.",
      "type": "string",
      "format": "path",
      "visible": false
    },
    "name": {
      "description": "The name of the feature.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the feature?"
    }
  },
  "required": [
    "name"
  ]
}